---
// Card.astro
export interface Props {
  id: string;
  src: string;
  alt?: string;
  title?: string;
  link?: string;
}

const { id, src, alt = "Imagen de la tarjeta", title = "", link } = Astro.props;
---

<a
  href={link || `/map/${id}`}
  class="relative group block w-full h-80 overflow-hidden rounded-xl shadow-lg"
>
  <!-- Imagen con efecto zoom en hover -->
  <img
    src={src}
    alt={alt}
    class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
  />

  <!-- Barra inferior que muestra el title y aparece en hover -->
  {title && (
    <div
      class="absolute bottom-0 left-0 w-full px-4 py-2 bg-black bg-opacity-70 text-white text-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
      {title}
    </div>
  )}
</a>
